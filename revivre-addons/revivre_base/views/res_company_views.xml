<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record id="view_company_form_revivre" model="ir.ui.view">
      <field name="name">res.company.form.revivre</field>
      <field name="model">res.company</field>
      <field name="inherit_id" ref="base.view_company_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='favicon']" position="after">
          <field name="alimhotel_logo" widget="image" class="float-left oe_avatar"/>
          <field name="villages_logo" widget="image" class="float-left oe_avatar"/>
          <field name="comment_for_report"/>
        </xpath>
      </field>
    </record>
  </data>
</odoo>